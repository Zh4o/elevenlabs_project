{
  "manifest_version": 3,
  "name": "ReadAloud Summarizer MLP",
  "version": "0.1.0",
  "description": "Summarizes and reads articles aloud, highlighting content.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Summarize and Read Aloud"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["Readability.js", "player.css"],
      "matches": ["<all_urls>"]
    }
  ]
}